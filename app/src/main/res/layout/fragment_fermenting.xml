<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            tools:visibility="visible">


            <Switch
                android:id="@+id/swEnable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Uruchom"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvCurrTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:text="75.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Docelowa temperatura"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etDstTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Ustaw temp."
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="93.0" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grzanie"
                    android:textSize="24sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivHeating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="100dp"
                    android:src="@android:drawable/presence_invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWaiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pobieram dane..."
                android:textAlignment="textStart"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>